<Project Sdk="Microsoft.NET.Sdk">
  <!-- Target Frameworks -->
  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;net40;net45;net46</TargetFrameworks>
  </PropertyGroup>
  
  <!-- Framework target constants -->
  <PropertyGroup Condition="'$(TargetFramework)'=='netstandard1.3'">
    <DefineConstants>NET_STANDARD</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='net46'">
    <DefineConstants>NET_4_6</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='net45'">
    <DefineConstants>NET_4_5</DefineConstants>
  </PropertyGroup>

  <!-- Assembly Info -->
  <PropertyGroup>
    <Version>0.1.0</Version>
    <FileVersion>0.1.0</FileVersion>
    <Authors>Daniel Pries</Authors>
    <Description>X12 Document parser</Description>
    <Copyright>Copyright (c) 2017 Daniel Pries</Copyright>
  </PropertyGroup>
  
  <!-- NuGet Settings -->
  <PropertyGroup>
    <PackageId>OpenX12</PackageId>
    <PackageVersion>0.1.0</PackageVersion>
    <Authors>Daniel Pries</Authors>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageTags>X12 Document parser</PackageTags>
    <PackageReleaseNotes>First release</PackageReleaseNotes>
    <PackageLicenseUrl>https://github.com/DanielMPries/OpenX12/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/DanielMPries/OpenX12</PackageProjectUrl>
    <PackageTags>x12 edi</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
</Project>